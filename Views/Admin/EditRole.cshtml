@model EditRoleViewModel

<h2>EDIT ROLE</h2>

<form asp-controller="Admin" asp-action="EditRole" method="post" class="form-horizontal">
    <h4>You can change the user details below</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Id" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="RoleName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Save role" />
            <a asp-action="RoleManagement" asp-controller="Admin" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    <h3>Users in this role:</h3>
    <ul>
        @foreach (var user in Model.Users)
        {
            <li>
                @user
            </li>
        }
    </ul>
    <a asp-controller="Admin" asp-action="AddUserToRole" asp-route-roleId="@Model.Id" class="btn btn-primary">Add user to role</a>
    <a asp-controller="Admin" asp-action="DeleteUserFromRole" asp-route-roleId="@Model.Id" class="btn btn-primary">Delete User from role</a>
    <a></a>
</form>
